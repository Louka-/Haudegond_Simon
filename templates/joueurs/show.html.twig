{% extends 'base.html.twig' %}

{% block title %}Joueur{% endblock %}

{% block body %}

	<div class="container bg-light">
		<div class="row pt-5 justify-content-center">
			<h1 class="text-center my-5">Joueur index</h1>
			<div class="col-12 d-flex justify-content-center bg-light">
				<div class="justify-content-center text-center">


    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ joueur.nom }}</td>
            </tr>
            <figure class="d-flex justify-content-center cadre">
                    <img src="{{asset('images/'~joueur.photo)}}" alt="">
            </figure>
            <tr>
                <th>Pays</th>
                <td>{{ joueur.pays }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ joueur.presentation }}</td>
            </tr>
            <tr>
                <th>Equipe</th>
                <td>{{ joueur.relation.nom }}</td>
            </tr>
        </tbody>
    </table>
            				</div>
			</div>

	</div>


</div>

    <div class="container bg-light pb-5 d-flex justify-content-center">
        <div class="col-6 d-flex justify-content-around">
            <a class="btn btn-info" href="{{ path('joueurs_index') }}">Retour à l'index</a>
            <a class="btn btn-success" href="{{ path('joueurs_edit', {'id': joueur.id}) }}">Editer le joueur</a>
            <form method="post" action="{{ path('joueurs_delete', {'id': joueur.id}) }}" onsubmit="return confirm('Souhaitez vous réellement supprimer ce joueur?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ joueur.id) }}">
                <button class="btn btn-danger">Supprimer le joueur</button>
            </form>
        </div>
    
    </div>




{% endblock %}
